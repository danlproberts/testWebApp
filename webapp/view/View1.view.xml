<mvc:View controllerName="testwebapptestWebApp.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<App>
		<pages>
			<Page title="{dataStore>/Listname}'s {i18n>title}"><content>
				<l:Grid defaultSpan="L4 M6 S12">
					<HBox>
						<layoutData>
							<l:GridData indent="L4 M2 S1"/>
						</layoutData>
						<Table width="100%">
							<columns vAlign="middle">
								<Column>
									<Text text="Task"/>
								</Column>
								<Column>
									<Text text="Due Date"/>
								</Column>
								<Column>
									<Text text=""/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Input id="inputBox" value="{addFields>/Title}" submit="onPressAdd"/>
										<DatePicker id="dateBox" dateValue="{addFields>/Duedate}"/>
										<Button text="Add" press="onPressAdd" type="Emphasized" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						</HBox>
						<HBox>
							<layoutData>
							<l:GridData span="L12 M12 S12"/>
						</layoutData>
						<Table width="auto"
							items="{
								path: '/ToDoListSet'
								}"
							id="table">
							<headerToolbar>
								<Toolbar>
									<Text text="To Do List"/>
									<Switch change="onPressMyFilter" customTextOn="Mine" customTextOff="All" />
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column>
									<Text text="ID"/>
								</Column>
								<Column>
									<Text text="Title"/>
								</Column>
								<Column>
									<Text text="Description"/>
								</Column>
								<Column>
									<Text text="Due Date"/>
								</Column>
								<Column>
									<Text text="Owner"/>
								</Column>
								<Column/>
								<Column/>
							</columns>
							<items id="myItems">
								<ColumnListItem>
									<cells>
										<Text text="{Id}"/>
										<Text text="{Title}"/>
										<Text text="{Description}"/>
										<Text text="{
													path: 'Duedate',
													type: 'sap.ui.model.type.Date',
													formatOptions: {
														style: 'long'
													}
												}"/>
										<Text text="{Listname}"/>
										<Button 
												id="editButton"
												text="Edit" 
												press="onPressEdit" 
												class="sapUiSmallMarginEnd"
												icon="sap-icon://edit"/>
										<Button text="Remove" press="onPressRemove" type="Reject" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</HBox>
				</l:Grid></content>
			</Page>
		</pages>
		
	</App>
</mvc:View>