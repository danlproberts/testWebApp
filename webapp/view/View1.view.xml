<mvc:View controllerName="testwebapptestWebApp.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<App>
		<pages>
			<Page title="{dataStore>/Listname}'s {i18n>title}">
			<content>
				<l:Grid defaultSpan="L8 M6 S12">
					<HBox>
						<layoutData>
							<l:GridData indent="L2 M2 S1"/>
						</layoutData>
						<Table width="100%">
							<columns vAlign="middle">
								<Column>
									<Text text="Task"/>
								</Column>
								<Column>
									<Text text="Due Date"/>
								</Column>
								<Column/>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Input id="inputBox" value="{addFields>/Title}" submit="onPressAdd"/>
										<DatePicker id="dateBox" dateValue="{addFields>/Duedate}"/>
										<Button text="Add" press="onPressAdd" type="Emphasized" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Live Info Update Box" press="onPressInfo">
							<TileContent>
								<VBox>
									<Label text="Input"/>			
									<Text text="{addFields>/Title}"/>
									<Label text="State"/>			
									<Text text="{myStateModel>/state}"/>
									</VBox>
							</TileContent>
						</GenericTile>
						</HBox>
						<HBox>
							<layoutData>
							<l:GridData span="L12 M12 S12"/>
						</layoutData>
						<Table width="auto"
							items="{myItems>/results}"
							id="table">
							<headerToolbar>
								<Toolbar>
									<Text text="To Do List" level="h2"/>
									<Button icon="sap-icon://refresh" press="reApplyMyFilter"/>
									<Label text="List Name: "/>
									<Input width="10%" value="{dataStore>/Listname}" submit="reApplyMyFilter"/>
									<Switch id="filterSwitch" change="reApplyMyFilter" customTextOn="Filter" customTextOff="Off" state="{myStateModel>/state}" />
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column>
									<Text text="ID"/>
								</Column>
								<Column>
									<Text text="Title"/>
								</Column>
								<Column>
									<Text text="Description"/>
								</Column>
								<Column>
									<Text text="Due Date"/>
								</Column>
								<Column>
									<Text text="Owner"/>
								</Column>
								<Column/>
								<Column/>
								<Column/>
							</columns>
							<items id="myItems">
								<ColumnListItem>
									<cells>
										<Text text="{myItems>Id}"/>
										<Text text="{myItems>Title}"/>
										<Text text="{myItems>Description}"/>
										<Text text="{
													path: 'myItems>Duedate',
													type: 'sap.ui.model.type.Date',
													formatOptions: {
														style: 'long'
													}
												}"/>
										<Text text="{myItems>Listname}"/>
										<Button text="View Details" icon="sap-icon://detail-view" type="Emphasized" />
										<Button 
												id="editButton"
												text="Edit" 
												press="onPressEdit" 
												class="sapUiSmallMarginEnd"
												icon="sap-icon://edit"/>
										<Button text="Remove" press="onPressRemove" type="Reject" icon="sap-icon://delete"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</HBox>
				</l:Grid></content>
			</Page>
		</pages>
		
	</App>
</mvc:View>